<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.joofont.dao.ContentMapper">

    <resultMap id="BaseResultMap" type="com.joofont.entity.Content">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="content_name" jdbcType="VARCHAR" property="contentName" />
        <result column="content" jdbcType="VARCHAR" property="content" />
        <result column="create_date" jdbcType="VARCHAR" property="createDate" />
    </resultMap>

    <sql id="Base_Column_List" >
        id, contentName, content, createDate
    </sql>

    <select id="findContentList" parameterType="String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from create_date
    </select>

    <insert id="insertContent" parameterType="com.joofont.entity.Content" >
        insert into test_content
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null">
                id,
            </if>
            <if test="contentName != null and contentName != ''">
                content_name,
            </if>
            <if test="content != null and content != ''" >
                content,
            </if>
            <if test="createDate != null and createDate != ''">
                create_date,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="id != null">
                #{id,jdbcType=INTEGER},
            </if>
            <if test="contentName != null and contentName != ''">
                #{contentName,jdbcType=VARCHAR},
            </if>
            <if test="content != null and content != ''" >
                #{content,jdbcType=VARCHAR},
            </if>
            <if test="createDate != null and createDate != ''">
                #{createDate,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>


</mapper>